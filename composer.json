{
  "name": "fc2blog/blog",
  "description": "オープンソースのブログ",
  "license": "MIT",
  "require": {
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-gettext": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "monolog/monolog": "^2.1",
    "league/flysystem": "^1.1",
    "twig/twig": "^3.0",
    "nikic/php-parser": "^4.10",
    "tuupola/base62": "^2.1"
  },
  "config": {
    "vendor-dir": "app/vendor"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "ext-pdo": "*",
    "fzaninotto/faker": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Fc2blog\\": "app/src/"
    },
    "files": [
      "app/core/common_functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Fc2blog\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
