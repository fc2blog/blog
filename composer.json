{
  "name": "fc2blog/blog",
  "description": "オープンソースのブログ",
  "license": "MIT",
  "require": {
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-gettext": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-pdo": "*"
  },
  "config": {
    "vendor-dir": "app/vendor"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "ext-pdo": "*",
    "fzaninotto/faker": "^1.9"
  },
  "autoload": {
    "psr-4": {
      "Fc2blog\\": "app/src/"
    },
    "files": [
      "app/core/common_functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Fc2blog\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
