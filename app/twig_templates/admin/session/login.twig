{% extends 'admin/layouts/default.twig' %}
{% block title %}{{ _('Login to Administration page') }}{% endblock %}

{% block content %}
    <header><h2>{{ _('Login') }}</h2></header>
    <form method="POST" class="admin-form" action="{{ url(request, "Session", "doLogin") }}">
        <input type="hidden" name="sig" value="{{ sig }}">
        <table id="id_form">
            <tbody>
            <tr>
                <th>{{ _('Login ID') }}</th>
                <td>
                    {{ input(req, 'user[login_id]', 'text')|raw }}
                    {% if errors['login_id'] %}
                        <p class="error">{{ errors['login_id'] }}</p>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>{{ _('Password') }}</th>
                <td>
                    {{ input(req, 'user[password]', 'password')|raw }}
                    {% if errors['password'] %}
                        <p class="error">{{ errors['password'] }}</p>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td class="form-button" colspan="2">
                    <input type="submit" value="{{ _('Login') }}"/>
                </td>
            </tr>
            <tr>
                <td class="form-button" colspan="2">
                    <a href="{{ url(request, "PasswordReset", "requestForm") }}">{{ _('If you forget password') }}</a>
                </td>
            </tr>
            </tbody>
        </table>
    </form>
{% endblock %}